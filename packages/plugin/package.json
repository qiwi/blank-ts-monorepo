{
  "name": "blank-ts-monorepo-plugin",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Plugin",
  "keywords": [],
  "main": "target/es5/index.js",
  "source": "target/ts/index.ts",
  "types": "target/es5/index.d.ts",
  "typescript": {
    "definition": "target/es5/index.d.ts"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed",
    "buildstamp.json"
  ],
  "scripts": {
    "clean": "rimraf target typings flow-typed buildcache coverage docs buildstamp.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "run -T npm-run-all -p -l lint test:unit test:depcheck",
    "test:unit": "run -T c8 -r html -r text -r lcov uvu -r tsm 'src/test/ts'",
    "test:depcheck": "depcheck --ignores typedoc,tslib,eslint-*,prettier-*,**/*-infra --ignore-patterns typings",
    "prebuild": "buildstamp --git --out.path buildstamp.json",
    "build": "run -T npm-run-all -p -l build:es5 build:es6 build:ts build:libdef docs",
    "build:es5": "run -T mkdirp target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "run -T mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cpy src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "docs": "run -T typedoc",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && yarn build && yarn test"
  },
  "dependencies": {
    "blank-ts-monorepo-common": "workspace:*",
    "tslib": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/blank-ts-monorepo.git"
  },
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiwi/blank-ts-monorepo/issues"
  },
  "homepage": "https://github.com/qiwi/blank-ts-monorepo/#readme",
  "prettier": "prettier-config-qiwi"
}
