{
  "name": "blank-ts-monorepo",
  "version": "0.0.0",
  "description": "Blank TS monorepo",
  "main": "target/es5/index.ts",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach --parallel --topological-dev --no-private run clean",
    "lint": "tslint -p tsconfig.json",
    "test": "npm-run-all -p -l lint test:unit test:depcheck test:depaudit",
    "test:unit": "c8 -r html -r text -r lcov uvu -r tsm --src='packages/*/src/test/ts'",
    "test:report": "yarn test && yarn coveralls:push",
    "test:concurrent": "yarn workspaces foreach --parallel --topological-dev --no-private run test && yarn coverage:merge",
    "test:depcheck": "yarn workspaces foreach --parallel --topological-dev --no-private run test:depcheck",
    "test:depaudit": "yarn audit --level moderate --groups=dependencies",
    "test:depauditfix": "npm_config_yes=true npx yarn-audit-fix --audit-level=moderate",
    "coverage:merge": "node scripts/js/coverage-merge.js",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || echo 'coveralls push failed :(' && exit 0",
    "prebuild": "tsc -b",
    "build": "yarn workspaces foreach --parallel --topological-dev --no-private run build",
    "uglify": "yarn workspaces foreach --parallel --topological-dev --no-private run uglify",
    "docs": "typedoc packages/**/src/main",
    "postupdate": "yarn && yarn test:depauditfix && yarn clean && yarn build && yarn test",
    "updeps": "npm_config_yes=true npx npm-upgrade-monorepo"
  },
  "devDependencies": {
    "@qiwi/npm-run-all": "^4.1.7",
    "@types/node": "^18.6.3",
    "c8": "^7.12.0",
    "coveralls": "^3.1.1",
    "find-git-root": "^1.0.4",
    "snazzy": "^9.0.0",
    "tsm": "^2.2.2",
    "typedoc": "^0.23.10",
    "uvu": "^0.5.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/blank-ts-monorepo.git"
  },
  "packageManager": "yarn@4.0.0-rc.14"
}
